%h1 Brick colors
= link_to 'New brick color', new_admin_brick_color_path, class: 'btn btn-success'

%table.table.table-striped
  %tr
    %th Name
    %th Actions
  - @brick_colors.each do |brick_color|
    %tr
      %td= brick_color.name
      %td
        = link_to 'Show', admin_brick_color_path(brick_color.id)
        = link_to 'Edit', edit_admin_brick_color_path(brick_color.id)
        = link_to 'Delete', admin_brick_color_path(brick_color.id), method: :delete, data: {confirm: 'Are you sure?'}

= link_to 'Back', admin_root_path