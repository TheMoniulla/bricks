%h1 Projects
= link_to 'New project', new_admin_project_path, class: 'btn btn-success'

%table.table.table-striped
  %tr
    %th Name
    %th Actions
  - @projects.each do |project|
    %tr
      %td= project.name
      %td
        = link_to 'Show', admin_project_path(project.id)
        = link_to 'Edit', edit_admin_project_path(project.id)
        = link_to 'Delete', admin_project_path(project.id), method: :delete, data: {confirm: 'Are you sure?'}

= link_to 'Back', admin_root_path